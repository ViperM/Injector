<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane fx:id="paneMain" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mmsoftware.controller.MainController">
    <left>

    </left>
    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <center>
                <TextArea fx:id="txtFileContent" prefHeight="200.0" prefWidth="200.0"
                          BorderPane.alignment="CENTER_RIGHT">
                    <BorderPane.margin>
                        <Insets/>
                    </BorderPane.margin>
                </TextArea>
            </center>
            <left>
                <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <top>
                        <Label fx:id="lblFolderPath" text="Select a folder" AnchorPane.bottomAnchor="0.0"
                               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                               BorderPane.alignment="TOP_LEFT">
                            <BorderPane.margin>
                                <Insets top="5.0"/>
                            </BorderPane.margin>
                        </Label>
                    </top>
                    <left>
                        <ListView fx:id="fileList" onMouseClicked="#handleFileListItemClick" prefHeight="318.0"
                                  prefWidth="177.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER">
                            <BorderPane.margin>
                                <Insets top="10.0"/>
                            </BorderPane.margin>
                        </ListView>
                    </left>
                </BorderPane>
            </left>
        </BorderPane>
    </center>
    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="btnOpenFolder" mnemonicParsing="false" onMouseClicked="#handleOpenFolderButtonClick">
                    <tooltip>
                        <Tooltip text="Open folder"/>
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">

                            <Image url="@open_32.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button disable="true" mnemonicParsing="false">
                    <tooltip>
                        <Tooltip text="Run selection"/>
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@play_32.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button mnemonicParsing="false">
                    <tooltip>
                        <Tooltip text="About..."/>
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@about_32.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </items>
        </ToolBar>
    </top>
</BorderPane>
