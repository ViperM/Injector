<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.fxmisc.richtext.CodeArea?>
<BorderPane fx:id="paneMain" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mmsoftware.controller.MainController">
    <left>
    </left>
    <center>
        <SplitPane fx:id="splitPane" dividerPositions="0.15" opacity="0.71" prefHeight="450.0" prefWidth="514.0"
                   BorderPane.alignment="TOP_LEFT">
            <items>
                <ListView fx:id="fileList" onMouseClicked="#handleFileListItemClick" layoutX="-7.0" layoutY="59.0"
                          prefHeight="448.0" prefWidth="150.0"
                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                          AnchorPane.topAnchor="0.0">
                    <placeholder>
                        <Label text="Select folder to load files"/>
                    </placeholder>
                </ListView>
                <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <center>
                        <CodeArea fx:id="txtFileContent" editable="false" BorderPane.alignment="CENTER_RIGHT"/>
                    </center>
                </BorderPane>
            </items>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </SplitPane>

    </center>
    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <Button fx:id="btnOpenFolder" mnemonicParsing="false" onMouseClicked="#handleOpenFolderButtonClick">
                    <tooltip>
                        <Tooltip text="Open folder"/>
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@open_32.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button disable="true" mnemonicParsing="false">
                    <tooltip>
                        <Tooltip text="Run selection"/>
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@play_32.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button mnemonicParsing="false">
                    <tooltip>
                        <Tooltip text="About..."/>
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@about_32.png"/>
                        </ImageView>
                    </graphic>
                </Button>
            </items>
        </ToolBar>
    </top>
</BorderPane>
